@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-2">All Roles</h1>
<hr />

@*Last Thing In THis Page*@
<Partial name="RoleForm" model="new RoleFormViewModel()" />
@*-------------*@


@if (@Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r=>r.Id)</th>
                <th>@Html.DisplayNameFor(r=>r.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        @if(item.Name == "Admin")
                        {
                            <button class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" disabled>Edit</button>
                            <button class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" disabled>Delete</button>
                        }
                        else
                        {
                            <button class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                        <button class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                        }

                            
                            
                        
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Rocords</h2>
    </div>
}
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}